<% if logged_in? %>
    <h1>Hello <%= current_user.username %> !</h1>
    <%= button_to "Logout", '/logout', method: :delete%>
<%end%>

<%= link_to 'Add Tweet', '/tweets/new' %>
<%= link_to 'Drafted Tweet', '/tweets/drafts' %>

<h1>Tweets Feed</h1>
<ul>
  <% @tweets.each do |tweet| %>
    <li>
      By <%= tweet.user.username %> on
      <%= tweet.created_at.strftime('%c') %>
      <%= tweet.status %>
      <p><%= tweet.content %></p>
      <p><%= link_to "Comments (#{tweet.comments_count})", tweet_comments_path(tweet) %></p>
    </li>
  <% end %>
</ul>
