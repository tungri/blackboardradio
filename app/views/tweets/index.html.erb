<% if logged_in? %>
    <h1>Hello <%= current_user.username %> !</h1>
    <%= button_to "Logout", '/logout', method: :delete%>
<%end%>

<%= link_to 'Add Tweet', '/tweets/new' %>

<h1>Tweets Feed</h1>
<ul>
  <% @tweets.each do |tweet| %>
    <li>
      By <%= tweet.user.username %> on
      <%= tweet.created_at.strftime('%c') %>
      <p><%= tweet.content %></p>
    </li>
  <% end %>
</ul>
